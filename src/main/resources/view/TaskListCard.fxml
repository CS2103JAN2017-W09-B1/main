<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>


<HBox id="cardPane" fx:id="cardPane" style="-fx-border-color: transparent;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <TitledPane expanded="false" style="-fx-border-color: transparent; -fx-background-color: transparent;" stylesheets="@DarkTheme.css" HBox.hgrow="ALWAYS">
         <content>
              <GridPane>
                  <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                  </columnConstraints>
                  <children>
                      <VBox alignment="CENTER_LEFT" minHeight="105.0" GridPane.columnIndex="0">
                          <stylesheets>
                              <URL value="@DarkTheme.css" />
                              <URL value="@Extensions.css" />
                          </stylesheets>
                          <padding>
                              <Insets bottom="5" left="15" right="5" top="5" />
                          </padding>
      
                                      <children>
                              <HBox alignment="CENTER_LEFT" spacing="5" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                                  <children>
                                      <HBox style="-fx-background-color: transparent; -fx-border-color: transparent;" />
                                  </children>
                              </HBox>
                              <FlowPane fx:id="tags" />
                              <Label fx:id="instruction" styleClass="cell_small_label_instruction" text="\$instruction" />
                              <Label fx:id="priority" styleClass="cell_small_label_priority" text="\$priority" />
                          </children>
                      </VBox>
                  </children>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
              </GridPane>
         </content>
         <graphic>
                  <Label fx:id="date" styleClass="cell_small_label_date" text="\$date">
               <graphic>
                           <Label fx:id="title" styleClass="cell_big_label" text="\$first">
                     <graphic>
                                 <Label fx:id="id" styleClass="cell_big_label" />
                     </graphic>
                  </Label>
               </graphic>
            </Label>
         </graphic>
      </TitledPane>
    </children>
</HBox>
